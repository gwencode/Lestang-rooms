<% carousel_name = "carousel-room-#{@room.name.downcase.split.join("-")}" %>

<section id="<%= carousel_name %>" class="carousel carousel-dark slide my-3" data-bs-ride="true">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#<%= carousel_name %>" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <% (1..@gallery_images.count - 1).each do |index| %>
      <button type="button" data-bs-target="#<%= carousel_name %>" data-bs-slide-to="<%= index %>" aria-label="Slide <%= index + 1 %>"></button>
    <% end %>
  </div>
  <div class="carousel-inner text-center">
    <div class="carousel-item active">
      <%= cl_image_tag @room.gallery_photos.first.key, alt: "Hébergements Toulouse - Résidence Lestang - #{@room.name}", class: "img-room-carousel", loading: "lazy" %>
    </div>
    <% @room.gallery_photos.last(@room.gallery_photos.count - 1).each do |photo| %>
      <div class="carousel-item text-center">
        <%= cl_image_tag photo.key, alt: "Hébergements Toulouse - Résidence Lestang - #{@room.name}", class: "img-room-carousel", loading: "lazy" %>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#<%= carousel_name %>" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#<%= carousel_name %>" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</section>
