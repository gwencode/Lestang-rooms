<% sleep_images.each_with_index do |image_path, index| %>
  <div class="card-sleep col-12 col-md-6 col-lg-4 col-xl-3 p-0">
    <i class="fa-solid fa-expand" id="expand" data-bs-toggle="modal" data-bs-target=<%= "#sleepImageModal-#{index}" %>></i>
    <%= image_tag "#{image_path}", alt: "Hébergements Toulouse - Résidence Lestang - chambres", loading: "lazy" %>
    <div class="card-sleep-infos">
      <% if index + 1 <= 2 %>
        <h6>Chambre <%= index + 1 %></h6>
        <p>1 lit double</p>
      <% end %>
      <% if index +1 == 3 %>
        <h6>Chambre <%= index + 1 %></h6>
        <p>1 matelas au sol</p>
      <% end %>
      <% if index + 1 == 4 %>
        <h6>Salon</h6>
        <p>1 canapé convertible</p>
      <% end %>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id= <%= "sleepImageModal-#{index}" %> tabindex="-1" aria-labelledby= <%= "sleepImageModal-#{index}Label" %> aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          <%= image_tag "#{image_path}", alt: "Hébergements Toulouse - Résidence Lestang - chambres", style: "max-width: 100%", loading: "lazy"%>
        </div>
      </div>
    </div>
  </div>

<% end %>
