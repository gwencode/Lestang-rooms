<div class="container">
  <div class="row py-4">
    <div class="col-md-3">
      <%= image_tag "#{@booking.room.name}/maison.png", alt: "", width: "100" %>
    </div>
    <div class="col">
      <h1>Récapitulatif</h1>
      <div class="separator"></div>
      <div class="row">
        <div class="col">
          <p>Arrivée</p>
          <p>Départ</p>
          <p>Nombre de nuits</p>
          <p>Nombre de personnes</p>
          <p>Prix par nuit</p>
          <p>Total</p>
        </div>
        <div class="col">
          <p><%= @booking.arrival.strftime("%d/%m/%Y") %></p>
          <p><%= @booking.departure.strftime("%d/%m/%Y") %></p>
          <p><%= @booking.nights %></p>
          <p><%= @booking.guests_number %></p>
          <p><%= @booking.night_price %></p>
          <p><%= @booking.booking_price %></p>
        </div>
    </div>
  </div>
</div>
