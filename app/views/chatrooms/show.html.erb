<div class="container-fluid container background-back-link">
  <% if current_user.admin == true %>
    <%= link_to raw("<i class='fa-solid fa-arrow-left-long'></i> <span>Retour</span>"), admin_booking_path(@booking), class: "back-link blue" %>
  <% else %>
    <%= link_to raw("<i class='fa-solid fa-arrow-left-long'></i> <span>Retour</span>"), booking_path(@booking), class: "back-link blue" %>
  <% end %>
</div>

<% receiver_name = current_user.admin ? "#{@booking.user.first_name} #{@booking.user.last_name}" : "#{User.where(admin: true).first.first_name} #{User.where(admin: true).first.last_name}" %>
<h2 class="p-5 text-center text-blue">Messages avec <%= receiver_name %></h2>

<div class="container chatroom"
  data-controller="chatroom"
  data-chatroom-chatroom-id-value="<%= @chatroom.id %>"
  data-chatroom-current-user-id-value="<%= current_user.id %>">

  <div class="p-3 messages" data-chatroom-target="messages">
    <% @chatroom.messages.each do |message| %>
      <div class="message-row d-flex <%= message.sender?(current_user) ? 'justify-content-end' : 'justify-content-start' %>">
        <div class="<%= message.sender?(current_user) ? 'sender-style' : 'receiver-style' %>">
          <%= render "messages/message", message: message %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="my-3" id="send-message-area">
    <%= simple_form_for([@chatroom, @message],
                        url: booking_chatroom_messages_path(@booking, @chatroom),
                        method: :post,
                        html: { data: { action: "turbo:submit-end->chatroom#resetForm" }, class: "d-flex gap-3"}) do |f|
    %>
      <div id="send-message-div">
        <%= f.input :content, as: :text,
          label: false,
          placeholder: "...",
          wrapper_html: {class: "flex-grow-1", id: "send-message-input", data: { chatroom_target: "message", action: "keyup->chatroom#revealButton" } }
        %>
        <%= button_tag(type: 'submit', class: "d-none", id: "send-message-button", data: { chatroom_target: "button" } ) do %>
          <i class="fa-solid fa-circle-arrow-up"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
