<div class="container py-3 row align-items-center dashboard">

  <% @dashboard_sections.each do |key, value| %>

    <div class="col-12 col-md-6 py-3 mx-auto">
      <%= link_to value[:url].to_sym, class: "text-decoration-none" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=  asset_path(value[:asset]) %>')">
          <%= key %>
        </div>
      <% end %>
    </div>

  <% end %>

</div>
