<div class="container-fluid container background-back-link">
  <%= link_to raw("<i class='fa-solid fa-circle-arrow-left'></i>"), admin_users_path, class: "back-link" %>
</div>
<div class="banner-user" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url('<%= asset_path("admin/people.jpg") %>')">

  <div class="container">
    <div class="py-3" style="background-color: rgba(0, 0, 0, 0.4); position: relative">

      <%= link_to edit_admin_user_path(@user), class: "admin-icon", id: "edit" do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>

      <header>
        <h3 class="px-5 text-center text-white"><%= @user.first_name.capitalize %> <%= @user.last_name.upcase %></h3>
        <p class="text-center text-white">Email : <%= @user.email %></p>
      </header>

      <div class="p-3 row">
        <h4 class="text-center text-white text-decoration-underline">Réservations</h4>

        <% if @bookings.empty? %>
          <p class="text-center text-white">Aucune réservation</p>
        <% end %>

        <%= render "admin/bookings/cards_bookings", bookings: @bookings %>

      </div>

      <div class="text-center">
        <%= link_to admin_user_path(@user),
                  data: {turbo_method: :delete, turbo_confirm: "Supprimer cet utilisateur ?"},
                  class: "admin-delete-icon" do %>
          <i class='fa-solid fa-trash-can'></i>
        <% end %>
      </div>

    </div>
  </div>

</div>
