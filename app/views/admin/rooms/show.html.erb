<div class="container-fluid container background-back-link">
  <%= link_to raw("<i class='fa-solid fa-arrow-left-long'></i> <span>Back</span>"), :back, class: "back-link" %>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url('<%= asset_path("#{@room.name}.png") %>')">

  <div class="container">
    <div class="py-3" style="background-color: rgba(0, 0, 0, 0.4); position: relative;">

      <%= link_to edit_admin_room_path(@room), class: "admin-icon", id: "edit" do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>

      <h2><%= @room.name %></h2>

      <div class="pt-3">
        <h5 class="text-center text-white"><u>Infos</u></h5>
        <div id="room-details">
          <p class="m-0"><%= @room.max_guests > 1 ? "#{@room.max_guests} voyageurs" : "1 voyageur"%> maximum</p>
          <p class="m-0">|</p>
          <p class="m-0"><%= @room.bedrooms > 1 ? "#{@room.bedrooms} chambres" : "1 chambre"%></p>
          <p class="m-0">|</p>
          <p class="m-0"><%= @room.beds > 1 ? "#{@room.beds} lits" : "1 lit"%></p>
          <p class="m-0">|</p>
          <p class="m-0"><%= @room.bathrooms > 1 ? "#{@room.bathrooms} salles de bain" : "1 salle de bain"%></p>
        </div>

        <div class="pt-3 text-center text-white">
          <h5><u>Description (page d'accueil)</u></h5>
          <p class="mx-auto px-3 col-12 col-md-10"><%= @room.description%></p>
        </div>

        <div class="mx-auto col-12 col-md-8 text-center text-white">

          <h5><u>Horaires</u></h5>
          <p><span class="fw-bold">Heure d'arrivée :</span> <%= @room.arrival_hour %></p>
          <p><span class="fw-bold">Heure de départ :</span> <%= @room.departure_hour %></p>

          <h5><u>Prix</u></h5>
          <p><span class="fw-bold">Prix / nuit :</span> <%= @room.room_price.night_price %> €</p>

          <% if @room.name == "La Maison" %>
            <p><span class="fw-bold">Prix / nuit (7 voyageurs) :</span> <%= @room.room_price.night_price_seven_guests %> €</p>
            <p><span class="fw-bold">Prix / nuit (8 voyageurs) :</span> <%= @room.room_price.night_price_eight_guests %> €</p>
          <% end %>

          <p><span class="fw-bold">Réduction à la semaine / nuit :</span> <%= @room.room_price.week_reduction %> €</p>
          <p class="mb-0"><span class="fw-bold">Frais de ménage :</span> <%= @room.room_price.cleaning_fee %> €</p>
        </div>

      </div>

    </div>
  </div>

</div>
