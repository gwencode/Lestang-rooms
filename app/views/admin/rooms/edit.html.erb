<div class="container-fluid container background-back-link">
  <%= link_to raw("<i class='fa-solid fa-arrow-left-long'></i> <span>Back</span>"), :back, class: "back-link" %>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url('<%= asset_path("#{@room.name}.png") %>')">

  <div class="container">
    <div class="py-3" style="background-color: rgba(0, 0, 0, 0.7);">

      <h2>Modifier <%= @room.name %></h2>

      <div class="div p-3 text-white">

        <%= simple_form_for [:admin, @room], url: admin_room_path(@room) do |f| %>

          <h5 class="text-center"><u>Infos</u></h5>
          <div class="row">
            <div class="col-6 col-md-3"><%= f.input :max_guests, label: "Nb de voyageurs maximum", hint: "Voyageurs de plus de 2 ans" %></div>
            <div class="col-6 col-md-3"><%= f.input :bedrooms, label: "Nb de chambres" %></div>
            <div class="col-6 col-md-3"><%= f.input :beds, label: "Nb de lits" %></div>
            <div class="col-6 col-md-3"><%= f.input :bathrooms, label: "Nb de salles de bain" %></div>
          </div>

          <h5 class="text-center"><u>Description</u></h5>
          <%= f.input :description, label: false %>

          <h5 class="text-center"><u>Horaires</u></h5>
          <div class="row">
            <div class="col-12 col-md-6"><%= f.input :arrival_hour, label: "Arrivée", hint: "Ecrire une phrase. Format de l'heure HH:MM" %></div>
            <div class="col-12 col-md-6"><%= f.input :departure_hour, label: "Départ", hint: "Ecrire une phrase. Format de l'heure HH:MM" %></div>
          </div>

          <h5 class="text-center"><u>Prix TO DO</u></h5>
          <div class="row">
            <div class="col-12 col-md-6"><%= f.input :arrival_hour, label: "Arrivée" %></div>
            <div class="col-12 col-md-6"><%= f.input :departure_hour, label: "Départ" %></div>
            <div class="col-12 col-md-6"><%= f.input :arrival_hour, label: "Arrivée" %></div>
            <div class="col-12 col-md-6"><%= f.input :departure_hour, label: "Départ" %></div>
          </div>
          <div class="py-3 d-flex justify-content-center">
            <%= f.submit "Modifier", class: "button-blue" %>
          </div>
        <% end %>

      </div>

        <div class="mx-auto col-12 col-md-8 text-center text-white">
          <h5><u>Prix</u></h5>
          <p><span class="fw-bold">Prix par nuit :</span> <%= @room.room_price.night_price %> €</p>
          <p><span class="fw-bold">Réduction à la semaine / nuit :</span> <%= @room.room_price.week_reduction %> €</p>
          <p><span class="fw-bold">Prix / nuit avec réduction à la semaine :</span> <%= @room.room_price.night_price_week_reduction %> €</p>
          <p><span class="fw-bold">Frais de ménage :</span> <%= @room.room_price.cleaning_fee %> €</p>
        </div>

    </div>
  </div>
</div>
