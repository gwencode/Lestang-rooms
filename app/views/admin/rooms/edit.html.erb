<div class="container-fluid container background-back-link">
  <%= link_to raw("<i class='fa-solid fa-arrow-left-long'></i> <span>Retour</span>"), :back, class: "back-link" %>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url('<%= asset_path("#{@room.name}.png") %>')">

  <div class="container">
    <div class="py-3" style="background-color: rgba(0, 0, 0, 0.7);">

      <h2>Modifier <%= @room.name %></h2>

      <div class="div p-3 text-white">

        <%= simple_form_for [:admin, @room], url: admin_room_path(@room) do |f| %>

          <div class="py-1">
            <h4 class="text-center"><u>Infos</u></h4>
            <div class="row">
              <div class="col-12 col-sm-6 col-xl-3"><%= f.input :max_guests, label: "Nb de voyageurs maximum", hint: "Voyageurs de plus de 2 ans", required: false%></div>
              <div class="col-12 col-sm-6 col-xl-3"><%= f.input :bedrooms, label: "Nb de chambres" %></div>
              <div class="col-12 col-sm-6 col-xl-3"><%= f.input :beds, label: "Nb de lits" %></div>
              <div class="col-12 col-sm-6 col-xl-3"><%= f.input :bathrooms, label: "Nb de salles de bain" %></div>
            </div>
          </div>

          <div class="py-1">
            <h4 class="text-center"><u>Description</u></h4>
            <%= f.input :description, label: false, as: :text, input_html: { class: "long-input" } %>
          </div>

          <div class="py-1">
            <h4 class="text-center"><u>Horaires</u></h4>
            <div class="row">
              <div class="col-12 col-md-6"><%= f.input :arrival_hour, label: "Arrivée", hint: "Ecrire une phrase. Format de l'heure HH:MM" %></div>
              <div class="col-12 col-md-6"><%= f.input :departure_hour, label: "Départ", hint: "Ecrire une phrase. Format de l'heure HH:MM" %></div>
            </div>
          </div>

          <div class="py-1">
            <h4 class="text-center"><u>Nb de nuits min / max</u></h4>
            <div class="row">
              <div class="col-12 col-md-6"><%= f.input :min_nights, label: "Nb de nuits minimum" %></div>
              <div class="col-12 col-md-6"><%= f.input :max_nights, label: "Nb de nuits minimum" %></div>
            </div>
          </div>


          <div class="py-1">
            <h4 class="text-center"><u>Prix</u></h4>
            <div class="row">
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :night_price, 'Prix de base / nuit en €', class: "form-label" %>
                <%= number_field_tag :night_price, @room.room_price.night_price, class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :medium_guests, 'Nb moyen de voyageurs', class: "form-label" %>
                <%= number_field_tag :medium_guests, @room.room_price.medium_guests, class: "form-control" %>
              </div>

              <div class="col-12 col-md-6 py-2">
                <%= label_tag :night_price_medium_guests, "Prix / nuit en € (Nb moyen de voyageurs)", class: "form-label" %>
                <%= number_field_tag :night_price_medium_guests, @room.room_price.night_price_medium_guests, class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :high_guests, 'Nb élevé de voyageurs', class: "form-label" %>
                <%= number_field_tag :high_guests, @room.room_price.high_guests, class: "form-control" %>
              </div>

              <div class="col-12 col-md-6 py-2">
                <%= label_tag :night_price_high_guests, "Prix / nuit en € (Nb élevé de voyageurs)", class: "form-label" %>
                <%= number_field_tag :night_price_high_guests, @room.room_price.night_price_high_guests, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="py-2">
            <h4 class="text-center"><u>Réductions</u></h4>

            <div class="row">
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :week_duration, 'Nb de nuits semaine', class: "form-label" %>
                <%= number_field_tag :week_duration, @room.room_price.week_duration, class: "form-control" %>
              </div>
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :week_reduction, 'Réduction semaine / nuit en €', class: "form-label" %>
                <%= number_field_tag :week_reduction, @room.room_price.week_reduction, class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :medium_duration, 'Nb de nuits moyenne durée', class: "form-label" %>
                <%= number_field_tag :medium_duration, @room.room_price.medium_duration, class: "form-control" %>
              </div>
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :medium_reduction, 'Réduction moyenne durée / nuit en €', class: "form-label" %>
                <%= number_field_tag :medium_reduction, @room.room_price.medium_reduction, class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :high_duration, 'Nb de nuits longue durée', class: "form-label" %>
                <%= number_field_tag :high_duration, @room.room_price.high_duration, class: "form-control" %>
              </div>
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :high_reduction, 'Réduction longue durée / nuit en €', class: "form-label" %>
                <%= number_field_tag :high_reduction, @room.room_price.high_reduction, class: "form-control" %>
              </div>
            </div>

          </div>

          <div class="py-2">
            <h4 class="text-center"><u>Frais de ménage</u></h4>

            <div class="row">
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :small_cleaning_duration, 'Nb de jours ménage faible durée', class: "form-label" %>
                <%= number_field_tag :small_cleaning_duration, @room.room_price.small_cleaning_duration, class: "form-control" %>
              </div>
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :small_cleaning_fee, 'Frais de ménage faible durée en €', class: "form-label" %>
                <%= number_field_tag :small_cleaning_fee, @room.room_price.small_cleaning_fee, class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :medium_cleaning_duration, 'Nb de jours ménage moyenne durée', class: "form-label" %>
                <%= number_field_tag :medium_cleaning_duration, @room.room_price.medium_cleaning_duration, class: "form-control" %>
              </div>
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :medium_cleaning_fee, 'Frais de ménage moyenne durée en €', class: "form-label" %>
                <%= number_field_tag :medium_cleaning_fee, @room.room_price.medium_cleaning_fee, class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :high_cleaning_duration, 'Nb de jours ménage longue durée', class: "form-label" %>
                <%= number_field_tag :high_cleaning_duration, @room.room_price.high_cleaning_duration, class: "form-control" %>
              </div>
              <div class="col-12 col-md-6 py-2">
                <%= label_tag :high_cleaning_fee, 'Frais de ménage longue durée en €', class: "form-label" %>
                <%= number_field_tag :high_cleaning_fee, @room.room_price.high_cleaning_fee, class: "form-control" %>
              </div>
            </div>

          </div>

          <div class="py-3 d-flex justify-content-center">
            <%= f.submit "Modifier", class: "button-blue" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
