<div class="container-fluid container background-back-link">
  <%= link_to raw("<i class='fa-solid fa-circle-arrow-left'></i>"), admin_root_path, class: "back-link" %>
</div>

<header class="p-5 header-blue">
  <h1>Photos</h1>
</header>

<main class="container py-3 row align-items-center">

  <% @pictures.each do |picture| %>
    <div class="col-6 col-md-4 col-lg-3 py-3 mx-auto">
      <%= link_to edit_admin_picture_path(picture), class: "text-decoration-none text-center" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path picture.photos.first.key %>')">
          <%= picture.description %>
        </div>
      <% end %>
    </div>
  <% end %>

</main>

<%= link_to "New picture", new_admin_picture_path, class: "text-decoration-none" %>
