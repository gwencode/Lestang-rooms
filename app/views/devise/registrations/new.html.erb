<div class="devise-background">
  <div class="container col-12 col-md-6 col-lg-4 devise-form">
    <h2 class="text-blue">Créer un compte</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: true,
                    label: "Mot de passe",
                    hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Confirmer mot de passe",
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions mb-3">
        <%= f.button :submit, "Créer un compte", class: "button-blue" %>
      </div>
    <% end %>

    <div class="py-2">
      <h5 class="text-blue">Vous avez déjà un compte?</h5>
      <%= link_to "Connexion", new_user_session_path, class: "button-dark" %>
    </div>
  </div>
</div>
