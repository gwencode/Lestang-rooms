<div class="devise-background">
  <div class="container col-12 col-md-6 col-lg-4 devise-form">
    <header>
      <h2 class="text-blue">Se connecter</h2>
    </header>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    label: "Email",
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Mot de passe",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <%= turbo_frame_tag 'recaptchas' do %>
        <%= recaptcha_v3(action: 'login', site_key: ENV['RECAPTCHA_SITE_KEY_V3']) %>
      <% end %>

      <div class="form-actions mb-3">
        <%= f.button :submit, "Connexion", class: "button-blue" %>
      </div>

      <div class="separator"></div>
      <div class="py-2">
        <h5 class="text-blue">Vous n'avez pas de compte ?</h5>
        <%= link_to "Créer un compte", new_user_registration_path, class: "button-dark" %>
      </div>

      <div class="separator"></div>
      <div class="py-2">
        <h5 class="text-blue">Mot de passe oublié ?</h5>
        <%= link_to "Nouveau mot de passe", new_password_path(resource_name), class: "button-dark" %>
      </div>

    <% end %>
  </div>
</div>
