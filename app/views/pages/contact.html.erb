
<div class="container">
  <p class="text-center mt-3 p-3">Vous pouvez nous contacter via le formulaire de contact. Nous vous répondrons dans les meilleurs délais.</p>

  <div class="row">

    <div class="col-12 col-lg-6 p-2">
      <h2 class="text-blue text-center">Formulaire de contact</h2>

      <%= simple_form_for(@user, url: contact_path, method: :post, data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="row">
            <div class="col-12 col-sm-6">
              <%= f.input :first_name,
                          required: true,
                          label: "Prénom",
                          autofocus: true,
                          input_html: { autocomplete: "first_name" } %>
            </div>
            <div class="col-12 col-sm-6">
              <%= f.input :last_name,
                          required: true,
                          label: "Nom",
                          autofocus: true,
                          input_html: { autocomplete: "last_name" } %>
            </div>
          </div>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>

          <%= label_tag :message, 'Message', class: "form-label" %>
          <%= text_area_tag :message, nil, class: "form-control" %>
        </div>

        <div class="form-actions py-3">
          <%= f.button :submit, "Envoyer", class: "button-blue" %>
        </div>
      <% end %>

    </div>

    <div class="col-12 col-lg-6 p-2">
      <h2 class="text-blue text-center">Paiement en ligne</h2>

    </div>
  </div>

</div>
